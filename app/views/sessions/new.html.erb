<br><br>
<div class="container-sm ">
    <div class="jumbotron">
        <h1 class="display-3">Log In</h1>
    
        <div style="width: 50%" class="center">

            <%= form_for :user do |f| %>
                <div class="form-group">
                    <%= f.label :email, class:"col-sm-2 col-form-label" %> 
                    <%= f.email_field :email, class:"form-control" %> 
                </div>
                <div class="form-group">
                    <%= f.label :password, class:"col-sm-2 col-form-label"  %>
                    <%= f.password_field :password, class:"form-control" %>
                </div>
                <div class="form-group">
                <%= f.submit "Log In", class:"btn btn-primary btn-lg"%>
                </div>
            <% end %>   
            <hr>    
            <%= button_to "Log in with Google", '/auth/google_oauth2', {class:"btn btn-primary btn-lg"} %>
        </div>
    </div>
        
</div>

    
  