<% if current_user == @user %>
    <h3>Hiya, <%=display_name%> </h3>
<% else %>
    <%= @user.name %>'s Recipes 
<% end %>
<p>
<% if @user.username == @user.name %>
    <%= link_to "Create a Custom Username", edit_user_path(current_user) %>
<% end %>
</p>




<h4> Favorited Recipes: </h4>

<% display_favorite_recipes.each do |r| %>
    <li><%= link_to r.title, r %></li><br>
<% end %>


