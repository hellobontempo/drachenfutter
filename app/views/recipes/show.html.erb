<div style="width: 100%">
    <div style="width: 40%; float: left"> 
         <h1><%=@recipe.title%></h1>
            <h4 class="center"> <%=link_to "View Source", @recipe.source, :target=>"_blank" %></h4>
            <table class="table">
                <thead>
                    <th colspan="3"></th>
                </thead>
                <tbody>
                    <tr>
                        <td><strong>Amount</strong></td>
                        <td><strong>Ingredient</strong></td>
                    </tr>
                    <% @recipe.recipe_ingredients.each do |ing| %>
                    <tr> 
                        <td> <%= ing.display_amount %></td>
                        <td> <%= ing.ing_name %> </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>

<div style="width: 100%">
    <div style="width: 60%; float: left"> 
        <h3> Feedback: </h3>   
            <% if @recipe.reviews %> 
                <% @recipe.reviews.order_by_date.each do |r| %>
                    <div class="div">
                        <%= r.user.username %> says: <%= r.content %> 
                        <br><br>
                        And rates it: <%= r.rating %>
                    </div>
                    <br>
                <% end %>
            <% end %>
        
        </div>
</div>
    </div>

    <div class="div" style="width: 50%; float: right"> 
        <h4> Directions: </h4>
            <%= @recipe.instructions %>
            <br>
            <br>
            <br>
        <h4> Write a Review: </h4>
            <%= render 'reviews/form' %>
    </div>

 

</div>


