 <h1><%=@recipe.title%> Review(s)</h1>
 <div class="table">

<div style="width: 100%">
    <div style="width: 50%; float: left"> 
            <%= render 'form' %>
    </div>
              
    <div style="width: 50%; float: right"> 
        <% if @recipe.reviews %> 
                <% @recipe.reviews.order_by_date.each do |r| %>
                    <%= render partial: 'reviews/display_review', locals: {r: r} %>
                <% end %>
            <% end %>
    </div>
</div>