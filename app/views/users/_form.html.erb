<%= render partial: "layouts/error", locals: {object: @user}  %>

<div style="width: 50%" class="center">

    <%= form_for @user do |f| %>
        <div class="form-group">
            <%= f.label :name, class:"col-sm-2 col-form-label" %> 
            <%= f.text_field :name, class:"form-control"%> 
        </div>
        <div class="form-group">
            <%= f.label :username, class:"col-sm-2 col-form-label"  %> 
            <%= f.text_field :username, class:"form-control" %> 
        </div>
        <div class="form-group">
            <%= f.label :email, class:"col-sm-2 col-form-label" %> 
            <%= f.email_field :email, class:"form-control" %> 
        </div>
        <div class="form-group">
            <%= f.label :password, class:"col-sm-2 col-form-label"  %>
            <%= f.password_field :password, class:"form-control" %>
        </div>
        <div class="form-group">
        <%= f.submit "Sign Up", class:"btn btn-primary btn-lg"%>
        </div>
    <% end %>       
</div>