<br><br>
<div class="container-sm ">
    <div class="jumbotron">
        <h2 class="display-4">Log In</h2>
        <%= render partial: "layouts/error", locals: {object: @user}  %>
        <div style="width: 50%" class="center">

            <%= form_for(@user, url: '/login') do |f| %>
                <div class="form-group">
                    <%= f.label :email, class:"col-sm-2 col-form-label" %> 
                    <%= f.email_field :email, class:"form-control" %> 
                </div>
                <div class="form-group">
                    <%= f.label :password, class:"col-sm-2 col-form-label"  %>
                    <%= f.password_field :password, class:"form-control" %>
                </div>
                <div class="form-group">
                <%= f.submit "Log In", class:"btn btn-primary btn-lg"%>
                </div>
            <% end %>   
            <hr>    
            <%= render "google" %>
        </div>
    </div>  
</div>

    

  