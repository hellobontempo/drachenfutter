        <a class="navbar-button" <%= link_to " Home ", user_path(current_user) %></a>
        <a class="navbar-button" <%= link_to " Browse Recipes ", recipes_path %></a>
        <a class="navbar-button" <%= link_to " Log Out ", logout_path, method: 'delete' %></a>
